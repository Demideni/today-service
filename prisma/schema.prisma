generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  MANAGER
  MECHANIC
}

enum TaskStatus {
  DRAFT
  ASSIGNED
  IN_PROGRESS
  WAITING_PARTS
  WAITING_APPROVAL
  BLOCKED
  DONE
  CLOSED
}

enum MediaKind {
  BEFORE
  AFTER
  EXTRA
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String
  role  Role @default(MECHANIC)

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  messages TaskMessage[]

  createdAt  DateTime     @default(now())
  Membership Membership[]
}

model Organization {
  id   String @id @default(cuid())
  name String
  slug String @unique @default(cuid())

  users    User[]
  invites  Invite[]
  tasks    Task[]
  bookings BookingRequest[]
  listings Listing[]

  createdAt  DateTime     @default(now())
  Membership Membership[]
  Client     Client[]
  WorkOrder  WorkOrder[]
}

model Membership {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(MANAGER)
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id])
  organization Organization @relation(fields: [organizationId], references: [id])

  @@unique([userId, organizationId])
  @@index([organizationId])
}

model Client {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  phone          String?
  email          String?
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
  workOrders   WorkOrder[]

  @@index([organizationId])
}

model Vehicle {
  id        String   @id @default(cuid())
  make      String
  model     String
  year      Int?
  vin       String?
  plate     String?
  mileage   Int?
  createdAt DateTime @default(now())

  workOrders WorkOrder[]
}

model WorkOrder {
  id             String   @id @default(cuid())
  organizationId String
  clientId       String
  vehicleId      String
  title          String
  statusLabel    String   @default("in_progress")
  publicToken    String   @unique
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
  client       Client       @relation(fields: [clientId], references: [id])
  vehicle      Vehicle      @relation(fields: [vehicleId], references: [id])
  tasks        Task[]

  @@index([organizationId])
  @@index([clientId])
}

model Task {
  id          String  @id @default(cuid())
  title       String
  description String?

  organizationId String?
  organization   Organization @relation(fields: [organizationId], references: [id])

  messages TaskMessage[]

  createdAt   DateTime   @default(now())
  WorkOrder   WorkOrder? @relation(fields: [workOrderId], references: [id])
  workOrderId String?
  Step        Step[]
  Media       Media[]
}

model Step {
  id       String    @id @default(cuid())
  taskId   String
  title    String
  details  String?
  tools    String?
  order    Int
  done     Boolean   @default(false)
  doneAt   DateTime?
  doneById String?

  task Task @relation(fields: [taskId], references: [id])

  @@unique([taskId, order])
  @@index([taskId])
}

model Media {
  id          String    @id @default(cuid())
  taskId      String
  kind        MediaKind
  url         String
  createdAt   DateTime  @default(now())
  createdById String?

  task Task @relation(fields: [taskId], references: [id])

  @@index([taskId])
}

model Invite {
  id    String @id @default(cuid())
  email String
  role  Role
  token String @unique

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  createdAt DateTime @default(now())
}

model TaskMessage {
  id   String @id @default(cuid())
  text String

  taskId String
  task   Task   @relation(fields: [taskId], references: [id])

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now())
}

enum BookingStatus {
  NEW
  CONFIRMED
  CANCELLED
  COMPLETED
}

model BookingRequest {
  id            String @id @default(cuid())
  customerName  String
  customerPhone String
  service       String

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  createdAt DateTime @default(now())
}

enum ListingStatus {
  ACTIVE
  SOLD
  ARCHIVED
}

model Listing {
  id          String @id @default(cuid())
  title       String
  description String
  price       Int

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  createdAt    DateTime       @default(now())
  ListingPhoto ListingPhoto[]
}

model ListingPhoto {
  id        String   @id @default(cuid())
  listingId String
  url       String
  order     Int
  createdAt DateTime @default(now())

  listing Listing @relation(fields: [listingId], references: [id])

  @@unique([listingId, order])
  @@index([listingId])
}

enum TemplateCategory {
  BRAKES
  OIL_SERVICE
  SUSPENSION
  DIAGNOSTICS
  ENGINE
  TRANSMISSION
  TIRES
  OTHER
}

model WorkTemplate {
  id          String           @id @default(cuid())
  title       String
  category    TemplateCategory @default(OTHER)
  description String?
  vehicleHint String?
  createdAt   DateTime         @default(now())

  steps WorkTemplateStep[]
}

model WorkTemplateStep {
  id         String  @id @default(cuid())
  templateId String
  order      Int
  title      String
  details    String?
  tools      String?

  template WorkTemplate @relation(fields: [templateId], references: [id])

  @@unique([templateId, order])
  @@index([templateId])
}
