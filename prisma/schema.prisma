generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  MANAGER
  MECHANIC
}

enum TaskStatus {
  DRAFT
  ASSIGNED
  IN_PROGRESS
  WAITING_PARTS
  WAITING_APPROVAL
  BLOCKED
  DONE
  CLOSED
}

enum MediaKind {
  BEFORE
  AFTER
  EXTRA
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String
  name          String?
  createdAt     DateTime     @default(now())
  memberships   Membership[]
  assignedTasks Task[]       @relation("TaskAssignee")
}

model Organization {
  slug       String       @unique
  id         String       @id @default(cuid())
  name       String
  createdAt  DateTime     @default(now())
  members    Membership[]
  workOrders WorkOrder[]
  clients    Client[]
}

model Membership {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(MANAGER)
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id])
  organization Organization @relation(fields: [organizationId], references: [id])

  @@unique([userId, organizationId])
  @@index([organizationId])
}

model Client {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  phone          String?
  email          String?
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
  workOrders   WorkOrder[]

  @@index([organizationId])
}

model Vehicle {
  id        String   @id @default(cuid())
  make      String
  model     String
  year      Int?
  vin       String?
  plate     String?
  mileage   Int?
  createdAt DateTime @default(now())

  workOrders WorkOrder[]
}

model WorkOrder {
  id             String   @id @default(cuid())
  organizationId String
  clientId       String
  vehicleId      String
  title          String
  statusLabel    String   @default("in_progress")
  publicToken    String   @unique
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
  client       Client       @relation(fields: [clientId], references: [id])
  vehicle      Vehicle      @relation(fields: [vehicleId], references: [id])
  tasks        Task[]

  @@index([organizationId])
  @@index([clientId])
}

model Task {
  id            String     @id @default(cuid())
  workOrderId   String
  title         String
  description   String?
  assignedToId  String?
  assignedTo    User?      @relation("TaskAssignee", fields: [assignedToId], references: [id])
  status        TaskStatus @default(ASSIGNED)
  requireBefore Boolean    @default(true)
  requireAfter  Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  workOrder WorkOrder @relation(fields: [workOrderId], references: [id])
  steps     Step[]
  media     Media[]

  @@index([workOrderId])
  @@index([assignedToId])
}

model Step {
  id       String    @id @default(cuid())
  taskId   String
  title    String
  details  String?
  tools    String?
  order    Int
  done     Boolean   @default(false)
  doneAt   DateTime?
  doneById String?

  task Task @relation(fields: [taskId], references: [id])

  @@unique([taskId, order])
  @@index([taskId])
}

model Media {
  id          String    @id @default(cuid())
  taskId      String
  kind        MediaKind
  url         String
  createdAt   DateTime  @default(now())
  createdById String?

  task Task @relation(fields: [taskId], references: [id])

  @@index([taskId])
}
model Invite {
  id             String   @id @default(cuid())
  organizationId String
  email          String
  role           Role     @default(MECHANIC)
  token          String   @unique
  expiresAt      DateTime
  usedAt         DateTime?
  createdAt      DateTime @default(now())
  createdById    String?

  organization Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
  @@index([email])
}

model TaskMessage {
  id        String   @id @default(cuid())
  taskId    String
  authorId  String
  body      String
  createdAt DateTime @default(now())

  task   Task @relation(fields: [taskId], references: [id])
  author User @relation(fields: [authorId], references: [id])

  @@index([taskId, createdAt])
}

enum BookingStatus {
  NEW
  CONFIRMED
  CANCELLED
  COMPLETED
}

model BookingRequest {
  id             String        @id @default(cuid())
  organizationId String
  status         BookingStatus @default(NEW)
  clientName     String
  phone          String?
  email          String?
  vehicleMake    String?
  vehicleModel   String?
  vehicleYear    Int?
  serviceType    String
  preferredDate  String?
  notes          String?
  createdAt      DateTime      @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId, createdAt])
}

enum ListingStatus {
  ACTIVE
  SOLD
  ARCHIVED
}

model Listing {
  id             String        @id @default(cuid())
  organizationId String?
  status         ListingStatus @default(ACTIVE)
  title          String
  description    String?
  price          Int?
  sellerName     String
  sellerPhone    String?
  sellerEmail    String?
  location       String?
  createdAt      DateTime      @default(now())

  organization Organization? @relation(fields: [organizationId], references: [id])

  photos ListingPhoto[]

  @@index([status, createdAt])
  @@index([organizationId])
}

model ListingPhoto {
  id        String   @id @default(cuid())
  listingId String
  url       String
  order     Int
  createdAt DateTime @default(now())

  listing Listing @relation(fields: [listingId], references: [id])

  @@unique([listingId, order])
  @@index([listingId])
}

enum TemplateCategory {
  BRAKES
  OIL_SERVICE
  SUSPENSION
  DIAGNOSTICS
  ENGINE
  TRANSMISSION
  TIRES
  OTHER
}

model WorkTemplate {
  id          String           @id @default(cuid())
  title       String
  category    TemplateCategory @default(OTHER)
  description String?
  vehicleHint String?
  createdAt   DateTime         @default(now())

  steps WorkTemplateStep[]
}

model WorkTemplateStep {
  id          String   @id @default(cuid())
  templateId  String
  order       Int
  title       String
  details     String?
  tools       String?

  template WorkTemplate @relation(fields: [templateId], references: [id])

  @@unique([templateId, order])
  @@index([templateId])
}
